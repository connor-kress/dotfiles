show-keymap-hint false
show-read-feeds false
show-read-articles false

bind-key j down
bind-key k up
bind-key g home
bind-key G end
bind-key - quit
browser "setsid -f xdg-open > /dev/null 2>&1"
macro , open-in-browser

macro v set browser "setsid -f play-custom '%u' > /dev/null 2>&1"; open-in-browser; set browser "setsid -f xdg-open > /dev/null 2>&1"

macro d set browser "setsid -f download '%u' > /dev/null 2>&1"; open-in-browser; set browser "setsid -f xdg-open > /dev/null 2>&1"

macro r set browser "setsid -f delete '%u' > /dev/null 2>&1"; open-in-browser; set browser "setsid -f xdg-open > /dev/null 2>&1"

macro c set browser "echo '%u' | xclip -selection clipboard"; open-in-browser; set browser "setsid -f xdg-open > /dev/null 2>&1"
